{
    "compilerOptions": {
        //require strict types
        "strict": true,

        // tell type script to generate an ESM systnax
         "target": "esnext",

         // tell type script to include ESM systanx as input including .j files inports
         "module": "nodenext",
         // define where to pust generated js
         "outDir": "../../dist-electron",

         //ignore errors from dependencies
         "skipLibCheck": true
    }
}